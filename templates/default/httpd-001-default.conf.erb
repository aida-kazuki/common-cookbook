# Generated by Chef for <%= node['hostname'] %>.
# Local modifications will be overwritten.

ServerName <%= node['fqdn'] %>
DocumentRoot /var/www
<Directory /var/www>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
</Directory>


#
# Empty VirtualHost
#
<VirtualHost *:80>
</VirtualHost>


LogLevel warn

#
# Override combined and common log format
#
LogFormat "%h %D %l %u \"%{%F %T}t\" \"%r\" %>s %D %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
LogFormat "%h %l %u \"%{%F %T}t\" \"%r\" %>s %D %b" common

LogFormat "time:%{%F %T}t\thost:%h\tident:%l\tuser:%u\treq:%r\tstatus:%>s\tsize:%b\treferer:\%{Referer}i\tua:%{User-Agent}i" combined_ltsv


#
# Default log
#
CustomLog "|/usr/sbin/rotatelogs <%= node['apache']['log_dir'] %>/access.log.%Y-%m-%d-%H 3600" combined_ltsv
ErrorLog "|/usr/sbin/rotatelogs <%= node['apache']['log_dir'] %>/error.log.%Y-%m-%d-%H 3600"


#
# ETag
#
FileETag MTime Size

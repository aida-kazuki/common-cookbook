# Generated by Chef for <%= node['hostname'] %>.
# Local modifications will be overwritten.

/var/log/<%= @logrotate_dummy %> {
    daily
    rotate 1
    missingok
    firstaction
        touch /var/lock/<%= @logrotate_dummy %>
        if [ ! -d <%= @prearchive_dir %> ]; then
            mkdir <%= @prearchive_dir %>
        fi
        find <% @log_dir %> \
          -maxdepth 1 \
          -not -name "<%= @logrotate_exclude_filename %>" -name "<%=@logrotate_filename %>" \
          -type f \
          -exec mv -t <%= @prearchive_dir %> {} \;
    endscript
    lastaction
        touch /var/lock/<%= @logrotate_dummy %>
        rm -f /var/lock/<%= @logrotate_dummy %>
    endscript
    nosharedscripts
}

<%= @prearchive_dir %>/<%= @logrotate_filename %> {
    daily
    rotate <%= @logrotate_rotate %>
    missingok
    nocreate
    nocopytruncate
    nosharedscripts
    firstaction
        if [ ! -d <%= @archive_dir %> ]; then
            mkdir <%= @archive_dir %>
        fi
    endscript
    postrotate
        ARCHIVE_DIR=<%= @archive_dir %>
        YEAR_OFFSET="1-4"
        MONTH_OFFSET="6-7"
        DAY_OFFSET="9-10"
<% if @logrotate_type == "hourly" -%>
        HOUR_OFFSET="12-13"
<% end -%>
        FILENAME=`basename ${1+"$@"}`
        YEAR=`echo $FILENAME | cut -d. -f3 | cut -c $YEAR_OFFSET`
        if [ -n "$YEAR" ]; then
            TO_DIR=$ARCHIVE_DIR/$YEAR
        fi

        MONTH=`echo $FILENAME | cut -d. -f3 | cut -c $MONTH_OFFSET`
        if [ -n "$MONTH" ]; then
            TO_DIR=$ARCHIVE_DIR/$YEAR/$MONTH
        fi

        DAY=`echo $FILENAME | cut -d. -f3 | cut -c $DAY_OFFSET`
        if [ -n "$DAY" ]; then
            TO_DIR=$ARCHIVE_DIR/$YEAR/$MONTH
        fi

<% if @logrotate_type == "hourly" -%>
        HOUR=`echo $FILENAME | cut -d. -f3 | cut -c $HOUR_OFFSET`
        if [ -n "$HOUR" ]; then
            TO_DIR=$ARCHIVE_DIR/$YEAR/$MONTH/$DAY
        fi
<% end -%>

        if [ ! -d $TO_DIR ];then
            mkdir -p $TO_DIR
        fi

        mv ${1+"$@"} $TO_DIR/
    endscript
    lastaction
        find "<%= @log_dir %>" \
          -name "<%=@logrotate_filename %>" \
          -type f \
          -mtime +<%= @logrotate_rotate %>* \
          -exec rm -f {} \;
    endscript
}
